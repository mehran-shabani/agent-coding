# Local Coding Agent Configuration
# Copy this file to .env and fill in your values

# Required: Your LLM API Key
LLM_API_KEY=your_api_key_here

# LLM Configuration (defaults to GapGPT)
LLM_BASE_URL=https://api.gapgpt.app/v1
LLM_MODEL=gpt-5o

# Agent Working Directory (default: current directory)
AGENT_WORKDIR=.

# Agent Log Directory (default: .agent/logs)
AGENT_LOG_DIR=.agent/logs

# Agent State File (default: .agent/state.json)
AGENT_STATE=.agent/state.json